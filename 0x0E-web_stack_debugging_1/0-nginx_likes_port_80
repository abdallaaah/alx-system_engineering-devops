#!/usr/bin/env bash
# this how to change the port of nignix to list to 80

sudo apt-get update
sudo apt-get install -y nginx
ngnix_config_conf="/etc/nginx/sites-available/default"
sudo sed -i "s/listen *[0-9]* default_server;/listen 80 default_server;/g" "$ngnix_config_conf"
sudo sed -i "s/listen \[::\]:[0-9]* default_server;/listen [::]:80 default_server;/g" "$ngnix_config_conf"
sudo systemctl restart nginx
